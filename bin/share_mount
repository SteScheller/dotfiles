#!/bin/bash

if [ ! "$(ls -A /mnt/share)" ]
then
    sshfs -o uid=1000,gid=1000 -C timbila:/share /mnt/share
    RETVAL=$?
    if [ "$RETVAL" == 0 ] 
    then
        echo "mounted share directories..."
    else
        echo "could not mount share directories..."
    fi
else
    echo "mounted share directories..."
fi

